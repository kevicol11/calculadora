<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="14"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-1dp">

        <EditText
            android:id="@+id/txtcaja"
            android:layout_width="358dp"
            android:layout_height="72dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:textSize="28sp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_gravity="left"
            app:layout_row="0" />

        <EditText
            android:id="@+id/txtcaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/btnMult"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"

            android:onClick="onClickButton"
            android:text="*"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnsie"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="7"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="onClickButton"/>


        <Button
            android:id="@+id/btnoch"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="8"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btnnue"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="9"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"

            android:onClick="onClickButton"
            android:text="+"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btncua"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="4"
            app:layout_column="0"
            app:layout_row="3"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btncinco"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="5"
            app:layout_column="1"
            app:layout_row="3"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btnseis"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="6"
            app:layout_column="2"
            app:layout_row="3"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btnmenos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"

            android:onClick="onClickButton"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnuno"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="1"
            app:layout_column="0"
            app:layout_row="4"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/btndos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:onClick="onClickButton"
            android:text="2"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btntres"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:text="3"
            app:layout_column="2"
            app:layout_row="4"
            android:onClick="onClickButton"/>


        <Button

            android:id="@+id/btndiv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="onClickButton"
            android:text="/"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnigual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"

            android:onClick="onClickButton"
            android:text="="
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnElim"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"

            android:text="c"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="onClickButton"/>

        <Button
            android:id="@+id/cero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"

            android:onClick="onClickButton"
            android:text="0"
            app:layout_column="0"
            app:layout_row="1" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>